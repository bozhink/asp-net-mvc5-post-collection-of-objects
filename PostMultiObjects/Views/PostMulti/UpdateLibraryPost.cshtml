@model PostMultiObjects.Models.Library


@{
    ViewBag.Title = "UpdateLibraryPost";
}

<h2>UpdateLibraryPost</h2>

<dl class="dl-horizontal">
    <dt>
        @Html.LabelFor(b => Model.Name)
    </dt>

    <dd>
        @Html.DisplayFor(b => Model.Name)
    </dd>
</dl>

<ul style="list-style: none">
    @foreach (var book in Model.Books)
    {
        <li>
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(b => book.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(b => book.Title)
                </dd>

                <dt>
                    @Html.LabelFor(b => book.Author)
                </dt>

                <dd>
                    @Html.DisplayFor(b => book.Author)
                </dd>

                <dt>
                    @Html.LabelFor(b => book.DatePublished)
                </dt>

                <dd>
                    @Html.DisplayFor(b => book.DatePublished)
                </dd>
            </dl>
        </li>
    }
</ul>